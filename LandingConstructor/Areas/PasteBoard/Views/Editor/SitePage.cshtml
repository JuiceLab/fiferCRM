@model PasteBoardPageEditModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title"> @(Model.PageId !=0? "Редактирование страницы " + Model.Title : "Новая страница")</h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body">
    @using (Html.BeginForm("SitePage", "Editor", new { Area = "PasteBoard" }, FormMethod.Post, new { id = "page-form", @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(m => m.ProjectId)
        @Html.HiddenFor(m => m.PageId)
        @Html.HiddenFor(m => m.ParentId)
        <div class="row">
            <div class="col-md-6 form-group">
                @Html.LabelFor(m => m.Title, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Название страницы" })
                </div>
            </div>
            <div class="col-md-6 form-group">
                @Html.LabelFor(m => m.Anchor, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Anchor, new { @class = "form-control", placeholder = "Название страницы" })
                </div>
            </div>
            <div class="col-md-11 form-group">
                @Html.LabelFor(m => m.Notice, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(m => m.Notice, new { @class = "form-control", placeholder = "Название страницы" })
                </div>
            </div>
            <div class="col-md-11">
                @Html.LabelFor(m => m.Text, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Text, new { @class = "form-control" })
                </div>
            </div>

            <div class="col-md-6  form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6  form-group">
                @Html.LabelFor(m => m.Keywords, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(m => m.Keywords, new { @class = "form-control" })
                </div>
            </div>
            @if (Model.ParentId.HasValue)
            {
                <div class=" col-md-6 form-group">
                    @Html.LabelFor(m => m.IsSocialRepost, new { @class = "col-sm-9 control-label" })
                    <div class="pull-left col-md-3">
                        @Html.CheckBoxFor(m => m.IsSocialRepost, new { @class = "form-control" })
                    </div>
                </div>
                <div class=" col-md-6 form-group">
                    @Html.LabelFor(m => m.PositionId, new { @class = "col-sm-9 control-label" })
                    <div class="pull-left col-md-3">
                        @Html.TextBoxFor(m => m.PositionId, new { @class = "form-control" })
                    </div>
                </div>
                <div class=" col-md-11">

                    <span onclick="updatePage();" style="width:100%" class=" btn btn-primary">Обновить</span>
                </div>
            }
            else
            {
                <div class=" col-md-6 form-group">
                    @Html.LabelFor(m => m.IsSocialRepost, new { @class = "col-sm-9 control-label" })
                    <div class="pull-left col-md-3">
                        @Html.CheckBoxFor(m => m.IsSocialRepost, new { @class = "form-control" })
                    </div>
                </div>
                <div class=" col-md-6 form-group">
                    @Html.ValidationSummary()
                    <span onclick="updatePage();" style="width:100%" class=" btn btn-primary">Обновить</span>
                </div>
            }
        </div>
    }
 </div>
