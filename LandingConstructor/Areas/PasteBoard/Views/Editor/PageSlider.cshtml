@model SliderEditModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Редактор слайдера</h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body" style="display:table">
    <div class="col-md-12">
        @foreach (var item in Model.SliderItems.OrderBy(m => m.Pos))
        {
            <div class="col-md-2" ><label><span class="btn btn-success" onclick="showSlideDetails(@item.ItemId)"><i style="color:white" class="fa fa-edit"></i></span>&nbsp;<span class="btn btn-danger" onclick="deleteSlide(@item.ItemId)"><i class="fa fa-trash" style="color:white"></i></span>&nbsp;@item.Title</label><img style="max-width:100px" src="@item.PhotoPath" /></div>
        }
        @if (Model.SliderItems.Count < 5)
        {
            <div class="col-md-2"><span class="btn btn-info" onclick="showSlideDetails(0);"><i class="fa fa-plus"></i>&nbsp; Добавить изображение</span></div>
        }
    </div>
    <div class="col-md-12" style="margin-top:50px">
        @using (Html.BeginForm("SlideEdit", "Editor", new { Area = "PasteBoard" }, FormMethod.Post, new { id = "info-form", @class = "form-vertical", role = "form" }))
        {
            <div id="slide4Edit">

            </div>
        }
    </div>
</div>

