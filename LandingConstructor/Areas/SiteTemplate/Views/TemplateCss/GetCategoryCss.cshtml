@model List<SelectListItem>
@if (Model.Count > 0) { 
    @Html.DropDownList("css-choice", Model)
    <span title="Сохранить стиль" class="btn btn-default" onclick="saveCss();"><i class="fa fa-exchange"></i></span>
 }
 else
 {
    <label style="font-size:10px" class="label label-info">Стили не найдены. Выберите другую категорию.</label> 
 }



