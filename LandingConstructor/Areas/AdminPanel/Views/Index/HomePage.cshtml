
@{
    ViewBag.Title = "Лэндинги LandingGem";
}

<div>
				<ul class="breadcrumb">
					<li>
						<span>@ViewBag.Title</span>
					</li>
				</ul>
			</div>
<div class="sortable row-fluid">
	
			</div>
			
<div class="row-fluid">
				<div class="box span12">
					<div class="box-header well">
						<h2><i class="icon-info-sign"></i>Лэндинги LandingGem</h2>
						<div class="box-icon">
							<a href="#" title="Свернуть" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" title="Закрыть" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
                    <div class="box-content">
                   
                    @(Html.Kendo().Grid<GridPageModel>()
                          .Name("GridPages")
                              .Columns(columns =>
                            {
                                columns.Bound(p => p.Client);
                                columns.Bound(p => p.LandingUrl).ClientTemplate("<a target='_blank' href=#=LandingUrl#>#=LandingName#</a>");
                                columns.Bound(p => p.Created).Format("{0:dd.MM.yyyy}");
                            })       
                                    .DataSource(d => d.Server().Model(m =>
                                    {
                                        m.Id(o=>o.PageId);
                                }))
                            .Pageable(pager => pager.Refresh(true))
                            .Filterable()
                            .Sortable()
                            .DataSource(dataSource => dataSource
                            .Ajax()
                            .PageSize(30)
                            .Read(read => read.Action("GetLandings", "GridData"))
                            .ServerOperation(false)
                          ))
                    </div>
				</div>
			</div>
<div class="row-fluid sortable">
</div><!--/row-->
