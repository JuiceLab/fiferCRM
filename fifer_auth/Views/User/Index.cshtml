@model UserContext.User
@{
    ViewBag.Title = "Пользователь " + Model.Login ;
    var iconOnline = "icon-large " + (Model.IsOnline ? "icon-ok-sign" : "icon-remove-sign");
    
}

<div>
    <ul class="breadcrumb">
        <li>
            <span>@ViewBag.Title</span>
        </li>
    </ul>
</div>
<div class="sortable row-fluid">

</div>

<div class="row-fluid">
    <div class="box span12">
        <div class="box-header well">
            <h2>@ViewBag.Title &nbsp; <i class="@(iconOnline)"> </i></h2>
            <div class="box-icon">
                <a href="#" title="Свернуть" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" title="Закрыть" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
         @(Html.Kendo().TabStrip()
          .Name("tabstrip")
          .Items(tabstrip =>
          {
              tabstrip.Add().Text("Карточка пользователя")
                  .Selected(true)
                  .Content(@<text>
                    <div class="row-fluid">
                        @Html.Partial("ProfileCart", Model)
                    </div>
                </text>);
              tabstrip.Add().Text("Функциональные Роли")
                  .Selected(false)
                  .Content(@<text>
                    <div>
                        @Html.Action("FuncRoleByUser", "Role", new { userId = Model.UserId })
                    </div>
                </text>);
              tabstrip.Add().Text("Роли")
                 .Selected(false)
                 .Content(@<text>
                    <div>
                        @Html.Action("RoleByUser", "Role", new { userId = Model.UserId })
                    </div>
                </text>);
            })
        )
        </div>
    </div>
</div>
<div class="row-fluid sortable">
</div><!--/row-->
