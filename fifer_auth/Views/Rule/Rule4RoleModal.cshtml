@model UserContext.Rule4Role
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="FuncRoleModalLabel">Новое правило для роли</h3>
</div>
<div class="modal-body">
    @using (Html.BeginForm("Rule4Role", "Rule"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        @Html.HiddenFor(m=>m.RoleId)
            <div class="control-group">
                <label class="control-label">Создание</label>
                <div class="controls">
                    @Html.DropDownListFor(m => m.RuleId, ViewBag.Rules as IEnumerable<SelectListItem>)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Создание</label>
                <div class="controls">
                    @Html.CheckBoxFor(m => m.Create)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Чтение</label>
                <div class="controls">
                    @Html.CheckBoxFor(m => m.Read)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Обновление</label>
                <div class="controls">
                    @Html.CheckBoxFor(m => m.Update)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Удаление</label>
                <div class="controls">
                    @Html.CheckBoxFor(m => m.Delete)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Активно</label>
                <div class="controls">
                    @Html.CheckBoxFor(m => m.IsAvailable)
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input type="submit" class="btn btn-success" value="добавить" />
                </div>
            </div>
    }
</div>
<div class="modal-footer">
    <button class="btn close" data-dismiss="modal" aria-hidden="true">Закрыть</button>
</div>


