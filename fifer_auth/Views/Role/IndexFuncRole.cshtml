@model List<SelectListItem>

@{
    var role = ViewBag.Role as UserContext.FunctionalRole;
    ViewBag.Title = "Фунциональная роль " + role.Name;
}

<div>
    <ul class="breadcrumb">
        <li>
            <span>@ViewBag.Title</span>
        </li>
    </ul>
</div>
<div class="sortable row-fluid">

</div>

<div class="row-fluid">
    <div class="box span12">
        <div class="box-header well">
            <h2>@ViewBag.Title</h2>
            <div class="box-icon">
                <a href="#" title="Свернуть" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" title="Закрыть" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <div>
                @using (Html.BeginForm("Role4FuncRole", "Role", new { roleId = role.RoleId }, FormMethod.Post, null))
                {
                    <ol>
                        @foreach (var item in Model)
                        {
                            <li style="margin-bottom:10px">
                                <div class="" style="border-bottom:solid 1px">
                                    @if (item.Selected)
                                    {
                                        <input id="@item.Text" class="" type="checkbox" value="@item.Value" name="roles" checked="checked" />
                                    }
                                    else
                                    {
                                        <input id="@item.Text" class="" type="checkbox" value="@item.Value" name="roles" />
                                    }<label for="@item.Text" class="" style="float:right">@item.Text</label>&nbsp
                                </div>
                            </li>
                        }
                    </ol>
                    <input class='btn btn-success' type="submit" value="обновить" />
                }
            </div>

        </div>
    </div>
    <div class="row-fluid sortable">
    </div><!--/row-->
</div>

