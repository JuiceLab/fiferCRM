@{
    ViewBag.Title = "LogOn";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";

}
<div class="row">

    <div class="row">
        <div class="col-md-12 center login-header">
            <h2>Добро пожаловать в режим бога Fifer-CRM</h2>
        </div>
        <!--/span-->
    </div><!--/row-->

    <div class="row">
        <div class="well col-md-5 center login-box">
            <div class="alert alert-info">
                Пожалуйста введите логин и пароль.
            </div>
            <form class="form-horizontal" action="/Account/LogOn" method="post">
                <fieldset>
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                        @Html.TextBox("login", string.Empty, new { placeholder = "Логин", @class = "form-control" })
                    </div>
                    <div class="clearfix"></div><br>

                    <div class="input-group input-group-lg">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                        @Html.Password("pass", string.Empty, new { placeholder = "Пароль", @class = "form-control" })
                    </div>
                    <div class="clearfix"></div>

                    <div class="input-prepend">
                        <label class="remember" for="remember">@Html.CheckBox("remember") Запомнить</label>
                    </div>
                    <div class="clearfix"></div>

                    <p class="center col-md-5">
                        <button type="submit" class="btn btn-primary">Войти</button>
                    </p>
                </fieldset>
            </form>
        </div>
        <!--/span-->
    </div><!--/row-->
</div><!--/fluid-row-->
