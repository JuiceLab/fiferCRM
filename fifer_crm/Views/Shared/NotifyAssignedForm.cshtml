@model Guid

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Уведомить</h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body">
    <div class="innerAll">
        <div class="innerLR">
            <form id="comment-legal-form" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Сообщение </label> 
                    <div class="col-sm-9">
                        @Html.TextArea("msg", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="button" onclick="@((bool)ViewBag.IsCompany ? "notifyLegal('" + Model + "')" : "notifyNotLegal('" + Model + "')")" class="btn btn-primary btn-action" value="Уведомить сотрудника" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
