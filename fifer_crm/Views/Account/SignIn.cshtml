@model LoginViewModel
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="layout-app">
    <!-- row-app -->
    <div class="row row-app">
        <!-- col -->
        <!-- col-separator.box -->
        <div class="col-separator col-unscrollable box">

            <!-- col-table -->
            <div class="col-table">

                <h4 class="innerAll margin-none border-bottom text-center"><i class="fa fa-lock"></i> Вход в систему Fifer-CRM</h4>

                <!-- col-table-row -->
                <div class="col-table-row">

                    <!-- col-app -->
                    <div class="col-app col-unscrollable">

                        <!-- col-app -->
                        <div class="col-app">
                            <div class="login">
                                <div class="placeholder text-center"><i class="fa fa-lock"></i></div>
                                <div class="panel panel-default col-sm-6 col-sm-offset-3">
                                    @if (ViewBag.Error != null)
                                    {
                                        <label style="color:red">@ViewBag.Error</label> 
                                    }
                                    <div class="panel-body">
                                        @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { role = "form" })) { 
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.Email, new { @for = "Email" })
                                                @Html.TextBoxFor(m => m.Email, new {@class="form-control",placeholder="Введите email или логин"})
                                                @Html.ValidationMessageFor(m=> m.Email)
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.Password, new { @for = "Password" })
                                                @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control", placeholder = "Введите пароль" })
                                                @Html.ValidationMessageFor(m => m.Password)
                                            </div>

                                            <button type="submit" class="btn btn-primary btn-block">Войти</button>
                                            <button onclick="resetPass()" class="btn btn-primary btn-block">Сбросить пароль</button>
                                            <div class="checkbox">
                                                <label>
                                                    @Html.CheckBoxFor(m=>m.RememberMe) Запомнить
                                                </label>
                                            </div>
                                        }

                                    </div>

                                </div>
                                <div class="col-sm-4 col-sm-offset-4 text-center">
                                    <div class="innerAll">
                                        <a href="/account/signup" class="btn btn-info">Создать новую компанию? <i class="fa fa-pencil"></i> </a>
                                        <div class="separator"></div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>

                            </div>


                        </div>
                        <!-- // END col-app -->

                    </div>
                    <!-- // END col-app.col-unscrollable -->

                </div>
                <!-- // END col-table-row -->

            </div>
            <!-- // END col-table -->

        </div>
        <!-- // END col-separator.box -->


    </div>
    <!-- // END row-app -->
</div>