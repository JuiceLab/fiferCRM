@model PositionViewModel
@{
   var departments = ViewBag.AvailableDepartments as List<DepartmentViewModel>;
   var positions = ViewBag.AvailablePositions as IEnumerable<SelectListItem>;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Должность @(Model.PosId !=0? Model.Name : "" )</h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body">
    <div class="innerAll">
        <div class="innerLR">
            @using (Html.BeginForm("PositionEdit", "Department", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.HiddenFor(m => m.PosId)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Наименование должности" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NameGenetive, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.NameGenetive, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.HeaderPosId, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.HeaderPosId, positions, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IsActive, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DepartmentId, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.DepartmentId, departments.Select(m => new SelectListItem() { Text = m.Title, Value = m.DepartmentId.ToString(), Selected = m.DepartmentId == Model.DepartmentId }), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">@(Model.PosId != 0 ? "Обновить" : "Добавить")</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

