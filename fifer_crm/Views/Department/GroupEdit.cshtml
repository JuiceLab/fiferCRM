@model WorkGroupViewModel
@{
   
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Рабочая группа @(Model.GroupId != 0 ? Model.Name : "")</h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body">
    <div class="innerAll">
        <div class="innerLR">
            @using (Html.BeginForm("GroupEdit", "Department", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.HiddenFor(m => m.GroupId)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Наименование должности" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Descritpion, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.Descritpion, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">@(Model.GroupId != 0 ? "Обновить" : "Добавить")</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

