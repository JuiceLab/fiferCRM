@model DepartmentViewModel
@{
    var groups = ViewBag.Groups as IEnumerable<SelectListItem>;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Отдел @(Model.DepartmentId != 0 ? Model.Title : "")</h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body">
    <div class="innerAll">
        <div class="innerLR">
            @using (Html.BeginForm("DepartmentEdit", "Department", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.HiddenFor(m => m.DepartmentId)
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Название отдела" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group margin-none innerB">
                    <div class="col-md-12">
                        <select id="Groups" name="Groups" class="multiselect" multiple>
                            @foreach (var item in groups)
                            {
                                if (item.Selected)
                                {
                                    <option value="@item.Value" selected>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IsActive, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">@(Model.DepartmentId != 0 ? "Обновить" : "Добавить")</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>