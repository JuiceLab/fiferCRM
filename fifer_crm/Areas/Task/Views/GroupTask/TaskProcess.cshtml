@model FiferTaskTicket

@{
    Model.CurrentComment = "";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Обработка задачи</h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body">
    <div class="innerAll">
        <div class="innerLR">
            <form id="taskTicketProcess" class="form-horizontal" role="form">
                @Html.HiddenFor(m => m.OwnerId)
                @Html.HiddenFor(m => m.CreatedBy)
                @Html.HiddenFor(m => m.Assigned)
                @Html.HiddenFor(m => m.ObjId)
                @Html.HiddenFor(m => m.MasterId)
                @Html.HiddenFor(m => m.TicketId)
                @Html.HiddenFor(m => m.CurrentCommentId)
                @Html.HiddenFor(m => m.CategoryId)
                @Html.HiddenFor(m => m.Priority)
                @Html.HiddenFor(m => m.Title)
                @Html.HiddenFor(m => m.Msg)
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Model.Title
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Msg, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <p>@Model.Msg</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentComment, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextAreaFor(m => m.CurrentComment, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.ValidationSummary()
                    <div id="taskProcessActions" class="col-sm-offset-2 col-sm-10">
                        <label>Загрузка доступных действий</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

