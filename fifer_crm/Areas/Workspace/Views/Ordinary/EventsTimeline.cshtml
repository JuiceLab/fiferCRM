@model IEnumerable<CRMEventPreview>
    <!-- col-table-row -->
    <div id="cur-timeline" class="col-table-row">
        @Html.Hidden("date4timeline", (string)ViewBag.Date)
        @if (Model.Count() == 0)
        {
            <label class="label label-success">Свободное время</label>
        }
        else
        {
        <!-- col-app.col-unscrollable -->
        <div class="col-app col-unscrollable">

            <!-- col-app -->
            <div class="col-app">
                <div class="innerAll bg-white">


                </div>
                <!-- APPOINTMENTS START -->
                <div class="widget-body padding-none">
                    <ul class="list-unstyled timeline-appointments border-bottom bg-primary-light">
                        @foreach (var item in Model.OrderBy(m => m.EventDate))
                        {
                            <li>
                                <div class="time">@(item.EventDate.TimeOfDay.Ticks == 0? "на день" : item.EventDate.ToShortTimeString())</div>
                                <i class="fa fa-dot-circle-o text-primary dot"></i>
                                <div class="appointments">
                                    <ul class="list-unstyled">
                                        <li>
                                            <div class="apt">
                                                <div class="btn-group btn-group-xs pull-right">
                                                    @if (item.TypeId == (byte)CRMEventType.TaskCall)
                                                    {
                                                        <span class="btn btn-default padding-none" onclick="loadModalContentWithCallback('modal-help', 'Edit', 'Task/Call', '?taskId=@(item.EventId)', initDateMask);" title="Создать звонок">&nbsp;<i class="fa fa-edit"></i>&nbsp;</span>
                                                    }
                                                    else if (item.TypeId == (byte)CRMEventType.Task)
                                                    {
                                                        <span class="btn btn-default padding-none" onclick="loadModalContentWithCallback('modal-help', 'TaskProcess', 'CommonTask', '?taskId=@(item.EventId)', initDateMask);" title="Создать задачу">&nbsp;<i class="fa fa-edit"></i>&nbsp;</span>
                                                    }
                                                    else if (item.TypeId == (byte)CRMEventType.Meeting)
                                                    {
                                                        <span class="btn btn-default padding-none" onclick="loadModalContentWithCallback('modal-help', 'Edit', 'Task/Meeting', '?taskId=@(item.EventId)', initDateMask);" title="Создать встречу">&nbsp;<i class="fa fa-edit"></i>&nbsp;</span>
                                                    }
                                                </div>
                                                <a href="" class="text-regular strong"><i class="fa fa-fw fa-user"></i></a>@item.ContactName <i class="text-faded fa fa-@(item.TypeId == (byte)CRMEventType.TaskCall ? "phone" : item.TypeId == (byte)CRMEventType.Task ? "cogs" : "suitcase")"></i> @item.OwnerName
                                                <i class="text-faded fa fa-tag"></i> <span class="label label-inverse">@(((CRMEventType)item.TypeId).GetStringValue())</span>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        }
                    </ul>
                </div>

                <!-- // END APPOINTMENTS -->
            </div>
            <!-- // END col-app -->

        </div>
        <!-- // END col-app.col-unscrollable -->
        }
    </div>
    <!-- // END col-table-row -->

