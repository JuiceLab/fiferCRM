@model SelectListItem
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Статья расходов</h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body">
    <div class="innerAll">
        <div class="innerLR">
            @using (Html.BeginForm("ExpenseEdit", "ActivityService", new { Area = "Finances" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.HiddenFor(m => m.Value)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Text, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Text, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">@(!string.IsNullOrEmpty(Model.Value) ? "Обновить" : "Добавить")</button>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>

