@model IEnumerable<CompanyModel.CompanyAddressViewModel>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Адреса компании </h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body">
    <div class="innerAll">
        <div class="innerLR">
            <!-- // Wizard heading END -->
            <div class="widget widget-tabs border-bottom-none">
                <!-- // Widget heading END -->
                <div class="widget-body" style="display:flex;">
                    <div class="col-md-4">
                        <div class="col-separator col-separator-first box col-unscrollable">
                            <!-- col-table -->
                            <div id="scrolled-div" class="col-table">
                                @Html.Hidden("legalCompanyId", (int)ViewBag.Company)
                                <span style="width:100%" class="btn btn-default" onclick="getAddress();"><i class="fa fa-plus"></i>&nbsp;Добавить новый адрес</span>
                                <div class="scroll-body" style="max-height:300px">
                                    <ul class="list-group list-group-1 borders-none">
                                        @foreach (var item in Model)
                                       {
                                        <li class="list-group-item" style="border:1px solid; padding:10px">
                                            <h5>@item.Address</h5>
                                            <div><i class="fa fa-phone"></i>&nbsp;@item.Phones</div>
                                            <div><i class="fa fa-envelope"></i>&nbsp;@item.Mails</div>
                                            <a class="btn btn-info padding-none" href="#" onclick="getAddress(@(item.AddrId)); $('.list-group-item').removeClass('active'); $(this).parents('li').addClass('active') ">&nbsp; показать на карте</a>
                                        </li>
                                       }
                                    </ul>
                                </div>
                                <div class="col-separator-h box"></div>
                            </div>
                            <!-- // END col-table -->
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="col-sm-12 control-label">Адрес на карте</label>
                        </div>
                        <div class="form-group">
                            <div id="google-map-legalgeo-add" class="map_canvas" style="height: 300px; "></div>
                        </div>
                        <div id="legal-geo">
                            @Html.Partial("LegalAddressEdit", new CompanyModel.CompanyAddressViewModel())
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
