@model ILegalEntitySearch
@{
    var services = ViewBag.Services as IEnumerable<SelectListItem>;
    var items = services.Select(m => new { id = m.Value, serviceGroup = m.Text.Split(new string[] { "||" }, StringSplitOptions.RemoveEmptyEntries).ToList() });
    var serviceGroups = items
        .GroupBy(m => m.serviceGroup[0])
        .ToDictionary(m => m.Key,
            m => m.Select(n => new SelectListItem() { Value = n.id, Text = n.serviceGroup[1], Selected = services.Any(k => k.ToString() == n.id) })
            .ToArray());
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Поиск по общей базе организаций</h3>
</div>
<!-- // Modal heading END -->
<!-- Modal body -->
<div class="modal-body">
    <div class="innerAll">
        <div class="innerLR">
            @using (Html.BeginForm("LegalSearch", "LegalEntity", new { Area = "CRM" }, FormMethod.Post, new { @class = "form-horizontal",id="companySearch", role = "form" }))
            {
                <div class="widget widget-tabs border-bottom-none">
                    <!-- // Widget heading END -->
                    <div class="widget-body">
                        <div class="col-md-4 ">
                            @Html.LabelFor(m => m.DistrictId)
                            @Html.DropDownListFor(m => m.DistrictId, ViewBag.Districts as IEnumerable<SelectListItem>, new { @class = "col-md-6 form-control", placeholder = "Город" })
                            @Html.ValidationMessageFor(m => m.DistrictId)
                        </div>
                        <div class="col-md-8">
                            <div id="city-Drop">
                                @Html.LabelFor(m => m.City)
                                @Html.DropDownListFor(m => m.City, ViewBag.Cities as IEnumerable<SelectListItem>, new { @class = "col-md-9 form-control", placeholder = "Город" })
                                @Html.ValidationMessageFor(m => m.City)
                            </div>
                        </div>
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.ActivityName, new { @class = "pull-left" })
                            <div class="col-md-12" >
                                <select id="Services" style="width: 100%;" name="Services" class="multiselect" multiple>
                                    @foreach (var group in serviceGroups)
                                    {
                                        <optgroup label="@group.Key">
                                            @foreach (var item in group.Value)
                                            {
                                                if (item.Selected)
                                                {
                                                    <option value="@item.Value" selected>@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        </optgroup>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12" id="choiced-input">
                            <fieldset>
                                <legend>Что мы знаем?</legend>
                                <div class="form-group margin-none innerB"> @Html.LabelFor(m => m.CompanyName, new { @class = "pull-left col-md-4" })
                                    <div class="col-md-7 input-group">
                                        @Html.TextBoxFor(m => m.CompanyName, new { style = "width:100%", @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group margin-none innerB">@Html.LabelFor(m => m.EMail, new { @class = "pull-left col-md-4" })
                                    <div class="col-md-7 input-group">
                                        @Html.TextBoxFor(m => m.EMail, new { style = "width:100%", @class = "form-control" })
                                    </div>
                                </div>


                                <!-- Column -->

                                <div class="col-md-6">
                                    <div class="form-group margin-none innerB"> @Html.LabelFor(m => m.Phone, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-7">
                                            <div class="input-group">
                                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group margin-none innerB"> @Html.LabelFor(m => m.INN, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-7">
                                            <div class="input-group">
                                                @Html.TextBoxFor(m => m.INN, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Group -->
                                    <div class="form-group margin-none innerB">
                                         @Html.LabelFor(m => m.KPP, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-7">
                                            <div class="input-group">
                                                @Html.TextBoxFor(m => m.KPP, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- // Column END -->
                                <!-- Column -->
                                <div class="col-md-6">
                                    <!-- Group -->
                                    <div class="form-group margin-none innerB">
                                        @Html.LabelFor(m => m.OGRN, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-8 input-group">
                                            @Html.TextBoxFor(m => m.OGRN, new { style = "width:100%", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group margin-none innerB"> @Html.LabelFor(m => m.RS, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-8 input-group">
                                            @Html.TextBoxFor(m => m.RS, new { style = "width:100%", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group margin-none innerB">
                                        <div class="col-md-12 input-group">
                                            <button type="button" style="width:100%" onclick="searchCompanies()" class="btn btn-primary">Найти</button>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div class="form-group" style="margin:20px;">
                        @Html.ValidationSummary()
                    </div>
                </div>
            }
            <div class="widget widget-tabs border-bottom-none">
                <!-- // Widget heading END -->
                <div id="search-list" class="widget-body">
                </div>
            </div>
        </div>

    </div>
</div>
