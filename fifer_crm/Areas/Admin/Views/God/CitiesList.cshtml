@model IEnumerable<CityPreview>
<div class="widget-body innerAll inner-2x">
    <div class="innerAll inner-2x">
        <ul class="chat media-list">
            @foreach (var item in Model.OrderBy(m => m.Name))
            {
                <li class="media">
                    <div class="media-body">
                        <h5 class="media-heading">@item.Name (@(item.Code))</h5>
                        <span title="Всего компаний / Наши клиенты" >@item.NumCompanies/@item.NumCustomers</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

